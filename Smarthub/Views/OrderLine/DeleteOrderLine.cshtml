@model Smarthub.ViewModels.OrderLineDTO

@{
    ViewData["Title"] = "Delete Order Line";
}

<h1 class="text-danger">Delete Order Line</h1>

<div class="alert alert-warning" role="alert">
    <h3>Are you sure you want to delete this order line?</h3>
</div>

<div class="card">
    <div class="card-header">
        <h4>Order Line Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            @foreach (var prop in typeof(Smarthub.ViewModels.OrderLineDTO).GetProperties())
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => prop.GetValue(Model))
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => prop.GetValue(Model))
                </dd>
            }
        </dl>
    </div>
</div>

<form asp-action="DeleteOrderLine" method="post" class="mt-4">
    <input type="hidden" asp-for="OrderLineId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        
    </div>
</form>

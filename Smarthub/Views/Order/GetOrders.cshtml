@model IEnumerable<Smarthub.ViewModels.OrderDTO>

<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header bg-success">
            <i class="fas bi-mortarboard-fill me-1 text-white"></i>
            <span class="text-black">Order List<span class="text-bold"></span></span>
        </div>

        <div class="card-body">
          
            <table class="table table-striped" id=" myTable">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Customer Name</th>
                        <th>Order Number</th>
                        <th>Order Type</th>
                        <th>Order Status</th>
                        <th>Order Date</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody id="orderTableBody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="text-primary" asp-action="EditOrder" asp-controller="Order" asp-route-OrderId="@item.OrderId">Edit</a> |
                                <a class="text-danger" asp-action="DeleteOrder" asp-controller="Order" asp-route-OrderId="@item.OrderId">Delete</a>
                            </td>
                            <td>@item.CustomerName</td>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderType</td>
                            <td>@item.OrderStatus</td>
                            <td>@item.OrderDate</td>
                            <td>
                                <a class="text-danger" asp-action="OrderDetails" asp-route-OrderId="@item.OrderId">Manage</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

}